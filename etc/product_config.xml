<?xml version="1.0" encoding='utf-8'?>

<!-- This config is partly used by Trollduction.-->

<product_config>
    <common>
        <!-- calibrated, satellite projection -->
        <netcdf_file>%Y%m%d_%H%M_%(orbit)_%(satellite)_swath.nc</netcdf_file>
        <output_dir>/tmp</output_dir>
    </common>
 
    <area>
        <!-- Area name to filename -->
        <name>Europe_4km</name>
        <!-- pytroll area definition name -->
        <definition>euro4</definition>
        <!-- Save calibrated and reprojected data as NetCDF4 -->
        <netcdf_file>%Y%m%d_%H%M_%(orbit)_%(satellite)_%(areaname).nc</netcdf_file>
        <!-- First product definition -->
        <product>
            <!-- pytroll image composite function -->
            <composite>overview</composite>
	    <!-- Composite name written to filename -->
	    <name>overview</name>
            <!-- function name for overlay (coastlines, coordinate grids) -->
	    <!-- not yet implemented -->
            <overlay></overlay>
	    <!-- Override output directory set at higher level -->
	    <output_dir>/tmp</output_dir>
	    <!-- Filename template.  Parts marked with %x or %(xxx) will be replaced -->
            <filename>%Y%m%d_%H%M_%(satellite)_%(areaname)_%(composite).png</filename>
	    
            <!-- Sun zenith angle limits -->
	    <!-- Not implemented -->
            <sunzen_minimum></sunzen_minimum>  <!-- only day time -->
            <sunzen_maximum></sunzen_maximum>  <!-- only night time -->
                                               <!-- if both set -> twilight between these limits -->

	    <!-- Valid satellites for this product -->
	    <!-- If any tags present, only those will be used -->
	    <!-- Not yet implemented -->
	    <valid_satellite>noaa18</valid_satellite>
	    <valid_satellite>noaa19</valid_satellite>
	    <valid_satellite>metop-b</valid_satellite>
	    <!-- Invalid satellites for this product -->
	    <!-- These are skipped -->
	    <!-- Not yet implemented -->
	    <invalid_satellite>noaa15</invalid_satellite>
        </product>

	<!-- next product with minimal required configuration -->
        <product>
	  <composite>night_fog</composite>
	  <name>night_fog</name>
	  <filename>%Y%m%d_%H%M_%(satellite)_%(areaname)_%(composite).png</filename>
        </product>
    </area>

    <!-- next area with minimal required configuration -->
    <area>
        <name>Europe_large</name>
        <definition>eurol</definition>
        <product>
            <composite>overview</composite>
	    <name>overview</name>
            <filename>%Y%m%d_%H%M_%(satellite)_%(areaname)_overview.png</filename>
        </product>
    </area>
 
</product_config>
