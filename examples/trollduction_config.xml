<?xml version="1.0" encoding='utf-8'?>

<!-- This config is partly used in Trollduction. -->

<trollduction_config>
    <!-- Name of this production chain -->
    <name>HRPT_l1b</name>
    <!-- Location of product configuration file -->
    <product_config_file>/tmp/product_config.xml</product_config_file>
    <!-- Tag which is listened from trollstalker -->
    <listener_tag>HRPT_l1b</listener_tag>
    <!--listener_tag>MSG_HRIT</listener_tag-->
    <!-- Directory to save logs in -->
    <log_dir>/tmp</log_dir>
    <!-- Log filename template -->
    <log_filename>%Y%m%d_%H%M_%(name).txt</log_filename>
    <!-- Logging levels for log files and console output, one of:
         DEBUG, INFO, WARN, ERROR, CRITICAL.
	 If no levels are given, defaults to INFO.
    -->
    <file_log_level>INFO</file_log_level>
    <console_log_level>DEBUG</console_log_level>
</trollduction_config>
